<div class="container">
  <div class="wrapper ">

    <h2>サインアップ</h2>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "確認用パスワード" %>
        </div>

        <div class="field">
          <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "サインアップ" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
