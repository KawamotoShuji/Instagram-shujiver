<div class="container">
  <div class="wrapper">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for(@post, url: choose_new_or_edit) do |f| %>

        <%= f.error_messages! %>

        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control' %>
        <% if @post.avatar? %>
        <%= image_tag @post.avatar.url %>
        <% end %>
        <br>
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
        <br>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
        <%= link_to "投稿一覧画面にもどる", posts_path %>
      </div>
    </div>
  </div>
</div>
