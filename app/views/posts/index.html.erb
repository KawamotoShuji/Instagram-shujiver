<div class="container">
  <div class="wrapper">
    <div class="center">
      <h1>投稿一覧</h1>
      <%= link_to "投稿する", new_post_path, class: 'btn btn-default' %>
      <br>
      <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h4><%= post.user.name %>の投稿</h4>
          <div class="well">
            <% if post.image? %>
            <center><%= image_tag post.image.url %></center>
            <% end %>
            <div class=homma>本文：<%= post.content %></div>
          </div>
          <%= link_to "投稿を編集する", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' },class: 'btn btn-default btn-sm btn-success' %>
          <%= link_to '投稿を削除する', post_path(post), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn btn-danger' %>
        </div>
      </div>
      <% end %>
      <div id="page-top-btn" class="page-top-btn">
        <p><a class="move-page-top" id="move-page-top">▲</a></p>
      </div>
    </div>
  </div>
