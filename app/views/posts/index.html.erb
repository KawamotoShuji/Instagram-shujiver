<div class="container">
  <div class="wrapper">
    <div class="center">
      <br>
      <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="well">
            <div class="post-under"><%= profile_img(post.user) if profile_img(post.user) %><%= post.user.name %></div>
            <% if post.avatar? %>
            <center><%= image_tag post.avatar.url %></center>
            <% end %>
            <div class="post-top"><%= post.content %></div>
          </div>
        </div>
      </div>
      <% end %>
      <div id="page-top-btn" class="page-top-btn">
        <p><a class="move-page-top" id="move-page-top">â–²</a></p>
      </div>
    </div>
  </div>
</div>
